<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.awesomefat.csc537_fall2017_hw2_template.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_integer"
        android:inputType="number"
        android:id="@+id/first_string"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_string"
        android:visibility="gone"
        android:src="@drawable/ic_add_circle_outline_black_24dp" android:contentDescription="@string/todo" />

    <EditText
        android:id="@+id/second_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_integer"
        android:inputType="number"
        android:layout_below="@id/add"
        android:gravity="center"
        />
    <Button
        android:id="@+id/add_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"
        android:text="@string/add"
        android:layout_below="@+id/second_string"
        android:layout_centerHorizontal="true" android:drawableStart="@drawable/ic_add_circle_outline_black_24dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/result"
        android:layout_below="@id/add_button"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginTop="80dp"
        />

</RelativeLayout>
